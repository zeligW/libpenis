build-type:         Simple

library
    exposed-modules:  Penis
    ghc-options:      -Wall
    build-depends:    base >= 4.17 && < 4.21
    hs-source-dirs:   src
    default-language: Haskell2010

test-suite libpenis-test
    default-language: Haskell2010
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base,
        libpenis

source-repository head
